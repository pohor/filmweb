<p id="notice"><%= notice %></p>

<h1>Directors</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <% if user_signed_in? %>
      <th scope="col"></th>
        <% if current_user&.admin? %>
      <th scope="col"></th>
        <% end %>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @directors.each do |director| %>
    <tr scope="row">
        <td>
          <%= link_to director.name, director, class:"text-white" %>
        </td>
        <% if user_signed_in? %>
        <td>
          <%= link_to 'Edit', edit_director_path(director), class:"text-white" %>
        </td>
            <% if current_user&.admin? %>
        <td>
          <%= link_to 'Destroy', director, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-white" %>
            <% end %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Director', new_director_path, class:"text-white" %> |
<% end %>
