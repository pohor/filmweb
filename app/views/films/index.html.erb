<p id="notice"><%= notice %></p>

<h1>Films</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Premiere</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.title %></td>
        <td><%= film.premiere %></td>
        <td><%= film.duration %></td>
        <td><%= link_to 'Show', film, class:"text-white" %> | </td>
        <td><%= link_to 'Edit', edit_film_path(film), class:"text-white" %> | </td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

