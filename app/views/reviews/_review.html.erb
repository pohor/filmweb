<p>
  <strong>Author:</strong>
  <%= review.user.email %>
</p>
<p>
  <strong>Rate:</strong>
  <%= review.rate %>
</p>
<p>
  <strong>Opinion:</strong>
  <%= review.comment %>
</p>

<% if current_user == review.user || current_user&.admin? %>
<%= link_to 'Delete review', film_review_path(film_id: review.film.id, id: review.id), method: :delete, data: { confirm: 'Are you sure?' }, class:'text-white' %> |
<%= link_to 'Edit review', edit_film_review_path(film_id: review.film.id, id: review.id), class:'text-white' %>
<% end %>
